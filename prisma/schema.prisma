generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Anouncement {
  id           Int      @id @default(autoincrement())
  title        String //@db.VarChar(50)
  year         Int
  km           Int
  price        Float
  description  String
  vehicle_type String
  ad_type      String
  published    Boolean
  sold         Boolean
  cover_img    String
  created      DateTime @updatedAt
  user         User   @relation(fields: [userId], references: [id])
  userId       Int

  @@map("Anouncement")
}

model User {
  id               Int           @id @default(autoincrement())
  name             String //@db.VarChar(50)
  email            String        @unique
  cpf              String        @unique
  phone            String
  date_of_birth    String
  description      String
  type             String //admin comprador anunciante
  password         String
  anouncements     Anouncement[]
}
