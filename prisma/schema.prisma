generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TypeVehicle {
  car
  motorbike
}

enum TypeAnouncement {
  auction
  sale
}

model Anouncement {
  id           String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title        String //@db.VarChar(50)
  year         Int
  km           Int
  price        Float
  description  String
  vehicle_type TypeVehicle
  ad_type      TypeAnouncement
  published    Boolean         
  sold         Boolean         
  cover_img    String
  created      DateTime        @default(now())
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String          @db.Uuid
  comments     Comment[]
  images       Image[]

  @@map("anouncement")
}

model Image {
  id            String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  url           String
  anouncement   Anouncement @relation(fields: [anouncementId], references: [id], onDelete: Cascade)
  anouncementId String      @db.Uuid
  @@map("image")
}

model Comment {
  id            String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  comment       String
  author        User        @relation(fields: [authorId], references: [id])
  authorId      String      @db.Uuid
  created       DateTime    @default(now())
  anouncement   Anouncement @relation(fields: [anouncementId], references: [id], onDelete: Cascade)
  anouncementId String      @db.Uuid

  @@map("comment")
}

model User {
  id            String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String //@db.VarChar(50)
  email         String        @unique
  cpf           String        @unique
  phone         String
  date_of_birth String
  description   String
  type          String
  password      String
  anouncements  Anouncement[]
  comments      Comment[]

  @@map("user")
}
